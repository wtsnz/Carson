extends ./base/layout

block content
	div.container
		div.page-header
			h1
				span.fa.fa-anchor
				|  Profile
		div.row
			div.col-sm-12
				div.well
					h3
						span.fa.fa-user
						|  User Info
					p
						b id: 
						| #{user._id}
					p
						b email:
						| #{user.local.email}
					p 
						b password: 
						| #{user.local.password}